{
  "name": "fabric",
  "description": "An open-source framework for augmenting humans using AI",
  "repository": "https://github.com/danielmiessler/fabric",
  "logo": "https://raw.githubusercontent.com/danielmiessler/fabric/main/images/fabric-logo-gif.gif",
  "keywords": ["ai", "automation", "golang", "cli", "web-ui"],
  "env": {
    "OPENAI_API_KEY": {
      "description": "Your OpenAI API key",
      "required": true
    },
    "PORT": {
      "description": "The port the server will listen on",
      "value": "8080"
    },
    "GO_ENV": {
      "description": "The environment (production/development)",
      "value": "production"
    }
  },
  "addons": [
    {
      "plan": "papertrail:choklad",
      "as": "PAPERTRAIL"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/go"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    },
    "api": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "scripts": {
    "postdeploy": "cd web && npm install && npm run build"
  },
  "success_url": "/",
  "website": "https://github.com/danielmiessler/fabric",
  "repository": "https://github.com/danielmiessler/fabric"
} 